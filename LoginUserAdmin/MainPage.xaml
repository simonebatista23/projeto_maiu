<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LoginUserAdmin.MainPage"
    BackgroundColor="#e0e5ec">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">

        <Frame
            BackgroundColor="White"
            HasShadow="True"
            Padding="30"
            WidthRequest="360"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <VerticalStackLayout Spacing="18">
                <Label Text="Bem-vindo(a)" FontSize="30" FontAttributes="Bold" TextColor="#2c3e50" HorizontalOptions="Center" />

                <Label Text="Email" FontAttributes="Bold" TextColor="#2c3e50"/>
                <Frame BackgroundColor="#f1f3f6" CornerRadius="12" Padding="0" HasShadow="False">
                    <Entry x:Name="EmailEntry" Placeholder="Digite o email" Keyboard="Email" BackgroundColor="Transparent" TextColor="Black"  />
                </Frame>

                <Label Text="Senha" FontAttributes="Bold" TextColor="#2c3e50"/>
                <Frame BackgroundColor="#f1f3f6" CornerRadius="12" Padding="0" HasShadow="False">
                    <Entry x:Name="PwdEntry" Placeholder="Digite a senha" IsPassword="True" BackgroundColor="Transparent" TextColor="Black"  />
                </Frame>

                <Button
                    x:Name="LoginButton"
                    Text="Login"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="52"
                    CornerRadius="18"
                    Clicked="OnLoginClicked"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
