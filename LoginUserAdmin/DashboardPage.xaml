<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="LoginUserAdmin.DashboardPage"
             Title="Dashboard"
             Background="#000000">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Dashboard de Tickets"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />


            <Picker x:Name="MonthPicker"
                    Title="Selecione o mês"
                    SelectedIndexChanged="OnMonthChanged" />

            <Label Text="Total de Tickets:"
                   FontAttributes="Bold"
                   FontSize="18" />

            <Label x:Name="TotalTicketsLabel"
                   FontSize="18"
                   TextColor="#6b7280" />
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,10,0,0">
                <Label Text="Eixo X: Dias do mês" TextColor="#6b7280" FontSize="14"/>
                <Label Text="Valor acima: Quantidade de tickets" TextColor="#6b7280" FontSize="14"/>
            </HorizontalStackLayout>


            <microcharts:ChartView x:Name="TicketsChart"
                                   HeightRequest="350"
                                   WidthRequest="750" />
            

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

